# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_NAME="Redmine Jira Integration"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE='Asia/Tokyo'
APP_URL=https://your-domain.com

# IMPORTANT: Set APP_DEBUG=false in production!
# IMPORTANT: Generate APP_KEY with: php artisan key:generate

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# ==============================================
# LOGGING
# ==============================================
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# IMPORTANT: Use 'daily' or 'syslog' in production
# IMPORTANT: Set LOG_LEVEL=info or higher in production

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# For production, use MySQL or PostgreSQL
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite
DB_HOST=127.0.0.1
DB_PORT=3306
#DB_DATABASE=rdi_production
DB_USERNAME=rdi_user
DB_PASSWORD=

# IMPORTANT: Use strong database credentials in production!

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# ==============================================
# CACHE & QUEUE CONFIGURATION
# ==============================================
# For production, use Redis for better performance
# For testing/development, use 'database' or 'file'
QUEUE_CONNECTION=database
CACHE_STORE=file
CACHE_PREFIX=rdi_

# Redis Configuration (REQUIRED for production)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# IMPORTANT: Install Redis and phpredis extension for production!

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# ==============================================
# INTEGRATION SETTINGS
# ==============================================

# Webhook Security
# Generate random 64-character strings for webhook signature verification
# Use: php artisan tinker -> Str::random(64)
REDMINE_WEBHOOK_SECRET=
JIRA_WEBHOOK_SECRET=

# Rate Limiting
# Maximum API requests per minute
API_RATE_LIMIT=60

# Queue Settings
# How long (in seconds) to wait before timing out a job
QUEUE_RETRY_AFTER=90
# Maximum number of times to attempt a job
QUEUE_MAX_TRIES=3

# Sync Settings (optional)
# SYNC_BATCH_SIZE=50
# SYNC_DELAY_SECONDS=2
